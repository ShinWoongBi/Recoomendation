<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="right">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">




        </android.support.v7.widget.Toolbar>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button2" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:layout_marginRight="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>



    </RelativeLayout>



    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#9A9A9A"
                android:gravity="center"
                android:paddingBottom="50dip">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:id="@+id/main_layout"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123"
                            android:id="@+id/data_top_left"
                            android:layout_alignParentLeft="true"
                            android:visibility="gone"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:visibility="gone"
                            android:text="123"
                            android:id="@+id/data_top_center"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123"
                            android:id="@+id/data_top_right"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123"
                            android:id="@+id/data_center_left"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123sdfasdfa"
                            android:id="@+id/data_center"
                            android:visibility="gone"
                            android:layout_centerInParent="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123"
                            android:visibility="gone"
                            android:id="@+id/data_center_right"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="40px"
                            android:text="123"
                            android:id="@+id/data_bottom_left"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="40px"
                            android:text="123"
                            android:id="@+id/data_bottom_center"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:text="123"
                            android:visibility="gone"
                            android:id="@+id/data_bottom_right"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>


                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="false"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:gravity="top"
                            android:maxLines="2"
                            android:textSize="35sp"
                            android:id="@+id/day_T"
                            android:text="22"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/month_T"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:gravity="bottom"
                                android:maxLines="2"
                                android:singleLine="true"
                                android:text="Oct"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:singleLine="true"
                                android:gravity="top"
                                android:maxLines="2"
                                android:textSize="20sp"
                                android:id="@+id/year_T"
                                android:text="2017"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/menu_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/color_layout"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:background="#fff">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="9">

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/color_btn1"
                            android:background="#fff"
                            android:src="@drawable/color1"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn2"
                            android:layout_weight="1"
                            android:background="#F5837B"
                            android:src="@drawable/color2"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn3"
                            android:layout_weight="1"
                            android:background="#F7B959"
                            android:src="@drawable/color3"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn4"
                            android:layout_weight="1"
                            android:background="#5D9D8D"
                            android:src="@drawable/color4"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:id="@+id/color_btn5"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#488B9F"
                            android:src="@drawable/color4"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn6"
                            android:layout_weight="1"
                            android:background="#867896"
                            android:src="@drawable/color4"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn7"
                            android:layout_weight="1"
                            android:background="#C9A3BA"
                            android:src="@drawable/color4"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/color_btn8"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:src="@drawable/color4"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>

                        <ImageButton
                            android:layout_width="0dp"
                            android:id="@+id/color_btn9"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/galery"
                            android:background="#000"
                            android:scaleType="fitCenter"
                            android:padding="10dp"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_size_layout"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="40px"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="10px"
                        android:id="@+id/text_size_monitor"/>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_gravity="center_vertical"
                        android:progress="5"
                        android:max="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_location_layout"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="위치 "
                        android:gravity="center"
                        android:textSize="10pt"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/location_back"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/location_next"/>


                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:id="@+id/menu_layout"
                android:layout_weight="1"
                android:background="#fff">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativelayout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/gravity_btn"/>

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:background="#00FF0000"
                            android:padding="10dp"
                            android:src="@drawable/text_btn"
                            android:id="@+id/color_btn"
                            />
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/text_size_btn"
                            android:id="@+id/text_size_btn"
                            android:background="#00FF0000"
                            android:padding="10dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>


</LinearLayout>